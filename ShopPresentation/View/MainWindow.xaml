<Window x:Class="ShopPresentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopPresentation"
        xmlns:vm="clr-namespace:ShopPresentation.ViewModel"
        mc:Ignorable="d"
        Title="ShopOffer" Height="600" Width="900" ResizeMode="NoResize">

    <Window.Resources>
        <vm:MainWindowViewModel x:Key="mainVM"/>
    </Window.Resources>

    <Border Background="White">
        <Grid Margin="-2,0,2,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="2B Electronics" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0" Foreground="Black" FontSize="25"/>

            <Button x:Name="CartBtn" Content="Cart" Height="40" Width="80" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0" Background="Aqua"
                    Foreground="Black" FontSize="18" Click="CartBtn_Click"/>

            <Button x:Name="OrdersBtn" Content="My Orders" Height="40" Width="90" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,120,0" Background="Aqua"
                    Foreground="Black" FontSize="18" Click="OrdersBtn_Click"/>
            
            <Button x:Name="MainBtn" Content="Store" Height="40" Width="90" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,230,0" Background="Aqua"
                    Foreground="Black" FontSize="18" Click="MainBtn_Click"/>

            <ListBox Grid.Row="1" ItemsSource="{Binding offers}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text ="{Binding name}" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center" FontSize="22" FontWeight="Bold" Margin="10, 0, 0, 0"/>
                            <TextBlock Text ="{Binding description}" Width="500" Height="70" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center" FontSize="18" Margin="120, 0, 0, 0"/>
                            <TextBlock Text ="{Binding price}" Width="70" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" TextAlignment="Center" FontSize="20" Margin="0, 0, 180, 0"/>
                            <Button Content="Add to cart" Command="{Binding AddToCartCommand}" Height="40" Width="100" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0, 0, 40, 0" Background="Aqua" Foreground="Black" FontSize="18"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <ScrollViewer Grid.Row="1" Visibility="{Binding showCart}">
                <StackPanel Name="CartPanel"/>
            </ScrollViewer>

            <ScrollViewer Grid.Row="1" Visibility="{Binding showOrders}">
                <StackPanel Name="OfferPanel"/>
            </ScrollViewer>

        </Grid>
    </Border>
</Window>
